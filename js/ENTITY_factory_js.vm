'use strict';

/* Factory for ${entity.name} */

myAppServices.factory('${entity.name}', ['${_}http', function(${_}http) {
    var entityURL = baseURL + '/${fn.uncapitalize($entity.name)}';
    var ${_}this = {};
    ${_}this.getAll = function() {
        return ${_}http.get(entityURL);
    };
    ${_}this.get = function(${entity.keyAttributesNamesAsString(', ', '', '')}) {
        var url = entityURL + '/' + ${entity.keyAttributesNamesAsString(" + '/' + ", "", "")};
        return ${_}http.get(url);
    };
	${_}this.create = function(${entity.name.toLowerCase()}) {
		${_}this.validate(${entity.name.toLowerCase()})
		var url = entityURL;
		return ${_}http.post(url, ${entity.name.toLowerCase()});
    };
    ${_}this.update = function(${entity.name.toLowerCase()}) {
		${_}this.validate(${entity.name.toLowerCase()})
		var url = entityURL + '/' + ${entity.keyAttributesNamesAsString(" + '/' + ", "$entity.name.toLowerCase().", "")};
		return ${_}http.put(url, ${entity.name.toLowerCase()});
    };
    ${_}this.delete = function(${entity.keyAttributesNamesAsString(', ', '', '')}) {
        var url = entityURL + '/' + ${entity.keyAttributesNamesAsString(" + '/' + ", "", "")};
        return ${_}http.delete(url);
    };
    ${_}this.validate = function(${entity.name.toLowerCase()}) {
        var validationErrors = ${_}this.getValidationErrors(${entity.name.toLowerCase()});
		if( validationErrors.length > 0 ) {
			throw validationErrors;
		}
		return true;
    };
	${_}this.getValidationErrors = function(${entity.name.toLowerCase()}) {
		var errors = [];
#foreach( $attribute in $entity.keyAttributes )
        if( ${entity.name.toLowerCase()}.${attribute.name} == null || ${entity.name.toLowerCase()}.${attribute.name} == '' ) {
			errors.push('${attribute.name} is not defined');
		}
#end
		return errors;
	};
	return ${_}this;
}]);

